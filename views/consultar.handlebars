<div class="container">
    <br>
    <h4>Consultar - Agendamento de Potenciais Clientes</h4>


    <form action="/consultar" method="GET" class="form-inline mb-4">
        <div class="form-group mx-sm-3 mb-2">
            <label for="nome" class="sr-only">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome" placeholder="Buscar por nome">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Buscar</button>
    </form>

    <p>Lista de Agendamentos:</p>

    <table class="table text-center">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Origem</th>
                <th>Data do Contato</th>
                <th>Observação</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each agendamentos}}
                <tr>
                    <td>{{this.data.nome}}</td>
                    <td>{{this.data.telefone}}</td>
                    <td>{{this.data.origem}}</td>
                    <td>{{this.data.data_contato}}</td>
                    <td>{{this.data.observacao}}</td>
                    <td>
                        <button type="button" class="btn btn-primary mb-2" style="background-color: white;"><a href="/editar/{{this.id}}">Editar</a></button>
                        <button type="button" class="btn text-light" style="background-color: darkred; "><a href="/excluir/{{this.id}}">Excluir</a></button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

    {{#if mensagem}}
        <p>{{mensagem}}</p>
    {{/if}}
</div>